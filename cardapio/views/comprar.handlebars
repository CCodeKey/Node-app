<div class="container py-5">
    <!-- Seção de Título Principal -->
    <div class="row">
        <div class="col">
            <h1 class="text-center">Compra</h1>
        </div>
    </div>

    <!-- Seção de Informações do Produto -->
    <div class="row py-5">
        <div class="col-12">
            <h2>Produto</h2>
            <p><strong>Nome:</strong> {{produto.nome}}</p>
            <p><strong>Descrição:</strong> {{produto.descricao}}</p>
            <p><strong>Quantidade:</strong>
                <button onclick="alterarQuantidade(-1)" class="btn btn-secondary btn-sm">-</button>
                <span id="quantidade">{{quantidade}}</span>
                <button onclick="alterarQuantidade(1)" class="btn btn-secondary btn-sm">+</button>
            </p>

            <p><strong>Preço Total:</strong> R$ <span id="precoTotal">{{precoTotal}}</span></p>
        </div>
    </div>

    <script>
        let quantidade = {{ quantidade }};
        const precoUnitario = {{ produto.preco }};

        function alterarQuantidade(valor) {
            // Atualiza a quantidade, garantindo que ela não seja menor que 1
            quantidade = Math.max(1, quantidade + valor);

            // Atualiza o valor exibido na página
            document.getElementById("quantidade").textContent = quantidade;

            // Calcula o novo preço total
            const precoTotal = (quantidade * precoUnitario).toFixed(2);
            document.getElementById("precoTotal").textContent = precoTotal;
        }
    </script>

    <!-- Seção de Informações do Comprador -->
    <div class="row py-5">
        <div class="col-12">
            <h2>Informações do Comprador</h2>
        </div>
        <div class="col-md-6">
            <label for="nome" class="form-label">Nome completo</label>
            <input type="text" id="nome" class="form-control" placeholder="Informe seu nome completo">
        </div>
        <div class="col-md-6">
            <label for="cpf" class="form-label">CPF</label>
            <input type="number" id="cpf" class="form-control" placeholder="Informe seu CPF" maxlength="11">
        </div>
    </div>

    <!-- Seção de Endereço -->
    <div class="row py-5">
        <div class="col-12">
            <h2>Endereço</h2>
        </div>
        <div class="col-md-6">
            <label for="rua" class="form-label">Rua</label>
            <input type="text" id="rua" class="form-control" placeholder="Nome da sua rua">
        </div>
        <div class="col-md-6">
            <label for="bairro" class="form-label">Bairro</label>
            <input type="text" id="bairro" class="form-control" placeholder="Nome do seu bairro">
        </div>
        <div class="col-md-6">
            <label for="numero" class="form-label">Número da casa</label>
            <input type="number" id="numero" class="form-control" placeholder="Informe o número da sua casa">
        </div>
        <div class="col-md-6">
            <label for="complemento" class="form-label">Complemento</label>
            <input type="text" id="complemento" class="form-control" placeholder="Casa, apartamento, etc.">
        </div>
    </div>

    <!-- Seção de Forma de Pagamento -->
    <div class="row py-5">
        <div class="col">
            <h2>Forma de Pagamento</h2>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="pagamento-pix">
                <label class="form-check-label" for="pagamento-pix">Pix</label>
            </div>
