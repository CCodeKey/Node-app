<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .form-container {
            width: 300px;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }
        .form-container input[type="text"],
        .form-container input[type="email"],
        .form-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .form-container .password-container {
            position: relative;
        }
        .form-container .password-container input {
            width: calc(100% - 40px);
        }
        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
        .form-container button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px;
            background: #007bff;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }
        .form-container button:hover {
            background: #0056b3;
        }
        .form-container p {
            text-align: center;
            margin-top: 10px;
            color: #555;
        }
        .form-container a {
            color: #007bff;
            text-decoration: none;
        }
        .error {
            color: red;
            font-size: 14px;
            margin: 5px 0;
            display: none;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Nova conta</h2>
        <form id="signupForm" action="/n/signup" method="POST">
            <input type="text" name="username" placeholder="Username" required>
            <input type="email" name="email" placeholder="Email" required>
            <div class="error" id="emailError">Por favor, insira um e-mail v치lido.</div>
            <div class="password-container">
                <input type="password" name="password" placeholder="Password" required id="passwordInput">
                <span class="password-toggle" id="togglePassword">
                    游삒
                </span>
            </div>
            <div class="error" id="passwordError">
                A senha deve ter pelo menos 9 caracteres, incluir letras mai칰sculas e min칰sculas, n칰meros e s칤mbolos.
            </div>
            <button type="submit">Criar</button>
        </form>
        <p>J치 tem uma conta? <a href="/v/login">Login</a></p>
    </div>

    <script>
        // Alterna a visibilidade da senha
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');

        togglePassword.addEventListener('click', function() {
            // Alterna o tipo do input entre "password" e "text"
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;

            // Alterna o 칤cone de olho aberto/fechado
            this.textContent = type === 'password' ? '游삒' : '游땎'; // 칈cone de olho fechado
        });

        document.getElementById('signupForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const emailInput = this.elements['email'].value;
            const passwordInput = this.elements['password'].value;

            // Valida칞칚o do e-mail
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            const emailValid = emailPattern.test(emailInput);
            const emailError = document.getElementById('emailError');
            emailError.style.display = emailValid ? 'none' : 'block';

            // Valida칞칚o da senha
            const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{9,}$/;
            const passwordValid = passwordPattern.test(passwordInput);
            const passwordError = document.getElementById('passwordError');
            passwordError.style.display = passwordValid ? 'none' : 'block';

            // Se tudo estiver v치lido, envia o formul치rio
            if (emailValid && passwordValid) {
                alert('Cadastro realizado com sucesso! Redirecionando para o login...');
                this.submit(); // Envia o formul치rio
            }
        });
    </script>
</body>
</html>