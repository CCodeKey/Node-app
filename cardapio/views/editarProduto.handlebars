<h1>Editar Produto</h1>
<form action="/administrator/atualizar/{{produto.id}}" method="POST">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome do Produto:</label>
        <input type="text" id="nome" name="nome" class="form-control" value="{{produto.nome}}" required>
    </div>
    <div class="mb-3">
        <label for="preco" class="form-label">Preço:</label>
        <input type="number" id="preco" name="preco" class="form-control" value="{{produto.preco}}" required>
    </div>
    <div class="mb-3">
        <label for="descricao" class="form-label">Descrição:</label>
        <textarea id="descricao" name="descricao" class="form-control" required>{{produto.descricao}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
</form>